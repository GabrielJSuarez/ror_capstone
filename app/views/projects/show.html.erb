<%= render 'shared/navbar' %>

<div class="text-center fs-2 py-1 bg-primary text-light">
  <p class="mb-0 proxima-bold">
    <%= @project.name %>
  </p>
</div>

<div class="mb-feed">
  <% display_single_project(@project) %>

  <div class="fixed-bottom">
    <div class="d-grid gap-2 p-3 bg-warning text-white proxima-light">
      <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-outline-light py-2 w-100 proxima-light' %>
    </div>
    <div class="d-grid gap-2 p-3 bg-danger text-white proxima-light">
      <%= link_to 'Delete', project_path(@project), method: :delete, class: 'btn btn-outline-light py-2 w-100 proxima-light' %>
    </div>
  </div>
</div>