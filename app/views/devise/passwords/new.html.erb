<%= render 'shared/navbar' %>

<div class="px-2">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs pt-2">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'mb-2' },
                  label: false,
                  placeholder: 'Email', html_class: 'border-0' %>
    </div>

    <div class="fixed-bottom">
      <div class="d-grid gap-2 p-3 bg-primary text-white">
        <%= f.button :submit, "Send reset password instructions", class: 'btn btn-outline-light py-2 w-100' %>
      </div>
    </div>
  <% end %>
</div>
