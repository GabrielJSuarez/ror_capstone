<%= render 'shared/navbar' %>

<div class="px-2">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs pt-2">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'mb-2 proxima-light' },
                  label: false,
                  placeholder: 'Email', html_class: 'border-0' %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "mb-2 proxima-light" },
                  label: false,
                  placeholder: 'Password' %>
    </div>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-center nav-link text-muted proxima-light' %><br />
    <% end %>

    <div class="fixed-bottom">
      <div class="d-flex justify-content-center text-muted pb-2 proxima-light">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="d-grid gap-2 p-3 bg-primary text-white">
        <%= f.button :submit, "Log in", class: 'btn btn-outline-light py-2 w-100 proxima-light' %>
      </div>
    </div>
  <% end %>
</div>
